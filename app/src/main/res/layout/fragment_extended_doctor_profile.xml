<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/extended_doctor_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/scrollView" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/line_grey"
            android:id="@+id/linearLayout"
            android:orientation="vertical">

            <ImageView
            android:id="@+id/extended_doctor_image"
            android:layout_width="match_parent"
            android:layout_height="220sp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/extended_doctor_name"
        android:layout_width="wrap_content"
        android:textColor="@color/dark_grey"
        android:textSize="20.0sp"
        android:paddingLeft="10.0dip"
        android:paddingTop="16.0dip"
        android:paddingBottom="6.0dip"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/extended_money_needed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingBottom="10dip"
                android:paddingRight="4dip"
                android:paddingTop="2dip"
                android:text="@string/amount_raised_of_goal"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ProgressBar
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:progress="100"
            android:layout_height="wrap_content"
            android:id="@+id/extended_doctor_progress"
            android:progressDrawable="@drawable/orange_progress"
            android:paddingLeft="10dip"
                android:minHeight="8dp"
            android:paddingRight="10dip"
            android:indeterminate="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:id="@+id/extended_percentage_funded" />

            <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp"
        android:id="@+id/extended_doctor_biography" />

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7f7f7">

            <ImageView
                android:id="@+id/extended_focus_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dip" />

            <TextView
                android:id="@+id/extended_focus_text"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dip"
                android:src="@drawable/map_pin" />

            <TextView
                android:id="@+id/extended_doctor_location"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:textColor="@android:color/black"
                android:textSize="13sp" />
         </LinearLayout>
        </LinearLayout>
    </ScrollView>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contribute"
            android:id="@+id/donate_button"
            android:background="@color/sama_blue"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal|bottom" />
    </LinearLayout>
</LinearLayout>
